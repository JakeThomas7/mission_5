@{
    ViewData["Title"] = "Privacy Policy";
}

<section class="features calculator">
    <div class="container">
        <div class="calculator-container">
            <h2>Calculate Your Personal Training Fee</h2>

            <!-- Input for Hours -->
            <div class="form-group">
                <label for="hours">Enter Number of Hours</label>
                <input type="number" id="hours" class="form-control" placeholder="Enter hours" required>
            </div>

            <!-- Display Charge per Hour -->
            <div class="form-group">
                <label for="rate">Charge per Hour</label>
                <input type="text" id="rate" class="form-control" value="$30" readonly>
            </div>

            <!-- Calculate Button -->
            <a id="calculate-btn" class="button button-primary">Calculate Total</a>

            <!-- Output Total -->
            <div class="form-group">
                <label for="total">Total Fee</label>
                <input type="text" id="total" class="form-control" readonly>
            </div>

            <!-- Back to Home Button -->
            <div>
                <a href="/" class="button button-primary">Back to Home</a>
            </div>
        </div>
    </div>
</section>